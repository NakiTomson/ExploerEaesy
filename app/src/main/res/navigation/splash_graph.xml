<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_graph"
    app:startDestination="@id/splashFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.testtask.exploereaesy.view.MainActivity"
        tools:layout="@layout/activity_main" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.testtask.splash_impl.ui.view.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/splash_fragment">
        <action
            android:id="@+id/action_splashFragment_to_dashBoardFragment"
            app:destination="@id/dashBoardFragment"
            app:popUpTo="@id/dashBoardFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/dashBoardFragment"
        android:name="com.testtask.dashboard_impl.ui.dashboard.view.DashBoardFragment"
        android:label="DashBoardFragment"
        tools:layout="@layout/dashborad_fragment" />

    <fragment
        android:id="@+id/navigationFragment"
        android:name="com.testtask.navigation_impl.ui.view.NavigationFragment"
        android:label="NavigationFragment"
        tools:layout="@layout/fragment_navigation" />

    <action
        android:id="@+id/action_global_navigationFragment"
        app:destination="@id/navigationFragment" />


</navigation>